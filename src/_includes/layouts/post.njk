{% extends "base.njk" %}

{% block content %}
<article class="container" style="padding:3rem 1.5rem;">
  <header>
    <h1 class="section-title">{{ title }}</h1>
    <div class="post-meta">{{ date | date("yyyy-MM-dd") }}</div>
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
