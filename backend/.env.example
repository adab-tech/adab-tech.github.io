# Environment variables for Hausa Chatbot Backend

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-cloud-credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_API_KEY=your_google_api_key_here  # For services that support API key auth

# Gemini Pro Configuration (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here  # Falls back to GOOGLE_API_KEY if not set
GEMINI_MODEL=gemini-pro  # Model to use for Gemini Pro tasks

# Azure Speech Services Configuration
AZURE_SPEECH_KEY=your_azure_speech_api_key_here
AZURE_SPEECH_REGION=eastus  # or your preferred region (westeurope, etc.)

# Text-to-Speech Provider Configuration
TTS_PRIMARY_PROVIDER=azure  # Primary TTS provider (azure or google)
TTS_FALLBACK_PROVIDER=google  # Fallback TTS provider (google or azure)

# Rate Limiting Configuration (for Google Cloud free trial)
GOOGLE_CLOUD_MONTHLY_LIMIT=300  # Monthly spending limit in USD
ENABLE_RATE_LIMITING=true  # Enable rate limiting to protect free trial credits

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False  # Set to True only in local development, never in production
FLASK_SECRET_KEY=your_secret_key_here_change_in_production  # For session management

# Server Configuration
PORT=5000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=*

# Autonomous Training Configuration
AUTO_TRAIN_ENABLED=true  # Enable/disable autonomous training
AUTO_TRAIN_MIN_CONVERSATIONS=50  # Minimum conversations before triggering training
AUTO_TRAIN_INTERVAL_HOURS=24  # Hours between training checks
AUTO_TRAIN_MODEL=gpt-3.5-turbo  # Model to use for fine-tuning

# Fine-Tuning Provider Configuration
FINE_TUNE_PROVIDER=openai  # Provider for fine-tuning: 'openai' or 'gemini'

# Dataset Configuration
DATASET_CACHE_DIR=./data_cache  # Directory for caching datasets
USE_MOZILLA_COMMON_VOICE=true  # Load Mozilla Common Voice dataset
USE_JW300_CORPUS=true  # Load JW300 parallel corpus
USE_OPUS_CORPUS=true  # Load OPUS corpus
USE_HAUSANLP_CORPUS=false  # Enable if you have local HausaNLP corpus

# Evaluation Settings
ENABLE_PHONEME_VALIDATION=true  # Enable phoneme alignment validation
ENABLE_TONAL_VALIDATION=true  # Enable tonal accuracy validation
ENABLE_CULTURAL_VALIDATION=true  # Enable cultural context validation
