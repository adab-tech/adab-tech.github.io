# Environment variables for Hausa Chatbot Backend

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-cloud-credentials.json
GOOGLE_CLOUD_PROJECT=your_project_id

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False  # Set to True only in local development, never in production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=*

# Autonomous Training Configuration
AUTO_TRAIN_ENABLED=true  # Enable/disable autonomous training
AUTO_TRAIN_MIN_CONVERSATIONS=50  # Minimum conversations before triggering training
AUTO_TRAIN_INTERVAL_HOURS=24  # Hours between training checks
AUTO_TRAIN_MODEL=gpt-3.5-turbo  # Model to use for fine-tuning
